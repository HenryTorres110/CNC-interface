Screen: 
    MDCard:
        size_hint: None, None
        size: 400, 500
        pos_hint: {"center_x": 0.5, "center_y": 0.5}
        elevation: 10
        padding: 30
        spacing: 30 

        orientation: "vertical"

        MDLabel:
            id: welcome_label 
            text: "Bienvenido"
            font_size: 40
            halign: "center"
            size_hint_y: None
            height: self.texture_size[1]
            padding_y: 15

        MDTextFieldRound:
            id: user
            hint_text: "Usuario"
            icon_right: "account"
            size_hint_x: None
            width: 250
            font_size: 20
            pos_hint: {"center_x": 0.5}

        MDTextFieldRound:
            id: user
            hint_text: "Contraseña"
            icon_right: "eye-off"
            size_hint_x: None
            width: 250
            font_size: 20
            pos_hint: {"center_x": 0.5}
            password: True

        MDRoundFlatButton: 
            text: "Iniciar Sesión"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.logger()

        MDRoundFlatButton: 
            text: "Registrarse"
            font_size: 15
            pos_hint: {"center_x": 0.5}
            on_press: app.registration()

        Label:
            size_hint_y: None
            height: 10